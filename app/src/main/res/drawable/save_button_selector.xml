<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:drawable="@drawable/btn_confim_normal_b" android:state_pressed="true"></item>-->
    <!--<item android:drawable="@drawable/btn_confirm_pressed_b" android:state_pressed="false"></item>-->

    <!--第二种方法-->
    <!--默认情况下是一个带圆角,白色背景,蓝色边框的矩形-->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 圆角 -->
            <corners android:radius="5dp" />
            <!--填充颜色-->
            <solid android:color="#89836C" />
            <!--&lt;!&ndash; 描边 &ndash;&gt;-->
            <!--<stroke android:width="1dp" android:color="@color/blue" />-->
        </shape>
    </item>
    <!--单击时是一个带圆角,白色背景,绿色边框的矩形-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--圆角-->
            <corners android:radius="5dp" />
            <!--填充颜色为白色-->
            <solid android:color="@color/black" />
            <!--&lt;!&ndash;描边&ndash;&gt;-->
            <!--<stroke android:width="1dp" android:color="@color/green" />-->
        </shape>
    </item>
</selector>