<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#f0f5f9" />
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <stroke android:width="1px" android:color="#d0d3d8" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />


        </shape>
    </item>x
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#e9f3fc" />
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <stroke android:width="1px" android:color="#2c8dda" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />


        </shape>
    </item>

</selector>