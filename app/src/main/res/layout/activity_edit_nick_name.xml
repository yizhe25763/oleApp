<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_ff"
    android:orientation="vertical">

    <include layout="@layout/layout_ole_title" />

    <RelativeLayout
        android:id="@+id/avatar_rellayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h60"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <EditText
            android:id="@+id/nickname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/ic_rtx"
            android:gravity="center_vertical|left"
            android:hint="请输入您的昵称"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingBottom="@dimen/h8"
            android:textColor="#888888"
            android:textSize="16sp" />

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="@dimen/w25"
            android:layout_height="@dimen/h25"
            android:layout_alignRight="@id/nickname_et"
            android:layout_marginRight="@dimen/w5"
            android:background="@drawable/nick_delete_button_selector"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_marginLeft="@dimen/w20"
        android:layout_marginRight="@dimen/w20"
        android:layout_marginTop="@dimen/h8"
        android:background="#b6b6b6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w55"
        android:layout_marginTop="@dimen/h8"
        android:text="4-20个字符组成, 由中英文,数字组成"
        android:textColor="#999999"
        android:textSize="12sp" />

</LinearLayout>

