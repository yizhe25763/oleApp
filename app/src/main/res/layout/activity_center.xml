<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <include layout="@layout/layout_ole_title"/>
    <RelativeLayout
        android:id="@+id/avatar_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h75"
        android:paddingLeft="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/w60"
            android:layout_height="@dimen/h60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w20"
            android:src="@drawable/bg_mrtx"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/nickname_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textSize="16sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/gender_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/brithday_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="出生日期"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/brithday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/tellphone_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/bindemail_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="绑定邮箱"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/address_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收货地址"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/interest_rellayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="兴趣爱好"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/hotty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/home_arrow_right"
            android:drawablePadding="@dimen/w10"
            android:textSize="16sp"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />

</LinearLayout>
