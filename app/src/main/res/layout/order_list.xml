<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="@dimen/w101"
        android:layout_height="@dimen/h109"
        android:layout_marginLeft="@dimen/w20"
        android:background="@drawable/bg_zpbjd"
        android:layout_marginTop="@dimen/h5">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w10"
        android:layout_marginTop="@dimen/h27"
        android:layout_toRightOf="@+id/image_layout"
        android:layout_marginRight="35dp"
        android:maxLines="2"
        android:textColor="@color/c_222222"
        android:textSize="@dimen/sp13" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/w10"
        android:layout_marginTop="@dimen/h20"
        android:layout_toRightOf="@+id/image_layout"
        android:text="148"
        android:textColor="@color/c_222222"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/w20"
        android:layout_marginTop="@dimen/h27"
        android:gravity="right"
        android:text="2"
        android:textColor="@color/c_222222"
        android:textSize="@dimen/sp13" />
</RelativeLayout>