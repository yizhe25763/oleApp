<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f6f6f6">

    <include layout="@layout/layout_ole_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/w50"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zccg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w10"
            android:text="恭喜你，注册成功"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w15"
            android:text="成为会员享受更多权益"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp18"/>
        <ImageView
            android:id="@+id/regist_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w10"
            android:background="@drawable/ic_xxan"/>
        <Button
            android:id="@+id/regist_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w40"
            android:background="@drawable/regist_btn_selector"/>

    </LinearLayout>
</RelativeLayout>