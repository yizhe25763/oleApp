<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.crv.ole.demo.activity.DemoActivity">
        <include layout="@layout/layout_ole_title"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="match_parent">
                        <TextView
                                android:text="单个请求"
                                android:id="@+id/tvSingle"
                                android:onClick="onClick"
                                style="@style/demo_style_text"/>
                        <TextView
                                android:text="合并请求"
                                android:id="@+id/tvMeger"
                                android:onClick="onClick"
                                style="@style/demo_style_text"/>
                        <TextView
                                android:id="@+id/tvPrint"
                                style="@style/demo_style_content"/>
                </LinearLayout>
        </ScrollView>

</LinearLayout>
