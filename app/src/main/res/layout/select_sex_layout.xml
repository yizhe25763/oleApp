<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_ff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/boy_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:gravity="center"
        android:text="男"
        android:textColor="#222222"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w1"
        android:background="@color/c_f6f6f6" />

    <TextView
        android:id="@+id/girl_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:gravity="center"
        android:text="女"
        android:textColor="#222222"
        android:textSize="@dimen/sp16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h5"
        android:background="@color/c_f6f6f6" />

    <TextView
        android:id="@+id/other_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:gravity="center"
        android:text="保密"
        android:textColor="#222222"
        android:textSize="16sp" />
</LinearLayout>