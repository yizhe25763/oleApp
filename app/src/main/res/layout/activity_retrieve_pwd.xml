<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_ff"
    android:orientation="vertical">

    <include layout="@layout/layout_ole_title"/>


    <TextView
        android:id="@+id/error_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="图形验证码错误"
        android:visibility="invisible"
        android:textColor="#fd7070" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/auth_mobile_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_rtx_small"
            android:drawablePadding="10dp"
            android:hint="@string/phone_hint"
            android:phoneNumber="true"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/auth_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:text="@string/auth_code_btn"
            android:enabled="false"
            android:textColor="@color/lightgrey"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/txt_b6" />

    <RelativeLayout
        android:id="@+id/tx_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/tx_code_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_txm_small"
            android:drawablePadding="10dp"
            android:hint="请输入图形码"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/txt_66" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/line2_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/txt_b6" />


    <EditText
        android:id="@+id/sms_code_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_yzm_small"
        android:drawablePadding="10dp"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:textColor="#888888"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/txt_b6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_xz_pressed_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册即代表同意"
            android:textColor="#888888"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/fwxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《Ole服务协议》"
            android:textColor="#fd7070"
            android:textSize="@dimen/sp13" />
    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/confirm_btn_selector"
        android:text="@string/next_btn"
        android:enabled="false"
        android:textColor="@color/txt_ff" />
</LinearLayout>
