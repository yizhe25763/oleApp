<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h310"
        android:layout_marginLeft="@dimen/w30"
        android:layout_marginRight="@dimen/w30"
        android:layout_marginTop="@dimen/h30"
        android:background="@drawable/f6_bg_corner_shape">

        <ImageView
            android:id="@+id/im_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/tx_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/h17"
            android:layout_marginTop="@dimen/h13"
            android:background="@mipmap/bg_syztfs"
            android:gravity="center"
            android:text="66份"
            android:textColor="@color/txt_22"
            android:textSize="14dp"
            android:typeface="sans" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h20"
            android:text="补水面膜"
            android:textColor="@color/txt_22"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tx_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h10"
            android:text="原价 ¥55.5"
            android:textColor="@color/c_9b9580"
            android:textSize="13dp" />

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/tx_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_price"
            android:layout_marginLeft="@dimen/w30"
            android:layout_marginRight="@dimen/w30"
            android:layout_marginTop="@dimen/h23"
            android:lineSpacingExtra="@dimen/h10"
            android:text="从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨"
            android:textColor="@color/c_666666"
            android:textSize="14dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_applay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h40"
        android:layout_marginLeft="@dimen/w30"
        android:layout_marginRight="@dimen/w30"
        android:layout_marginTop="@dimen/h20"
        android:background="@drawable/bt_bg_shape"
        android:text="@string/apply_trial"
        android:textColor="@color/txt_22"
        android:textSize="14dp" />
</LinearLayout>