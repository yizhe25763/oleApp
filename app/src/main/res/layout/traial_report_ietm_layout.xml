<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h10"
        android:layout_marginTop="@dimen/h30"
        android:background="@color/c_f6f6f6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_head"
            android:layout_width="@dimen/h30"
            android:layout_height="@dimen/h30"
            android:layout_marginLeft="@dimen/h20"
            android:layout_marginRight="@dimen/w10"
            android:layout_marginTop="@dimen/h20"
            android:background="@drawable/head" />


        <ImageView
            android:id="@+id/im_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w18"
            android:layout_marginTop="@dimen/h23"
            android:background="@drawable/btn_ztxq_dz_normal" />

        <TextView
            android:id="@+id/tx_zan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w40"
            android:layout_marginTop="@dimen/h25"
            android:text="110"
            android:textColor="@color/b_b6b6b6"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h23"
            android:layout_toRightOf="@+id/im_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/txt_66"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深圳"
                    android:textColor="@color/c_999999"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tx_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="#一句话试用总结#"
                    android:textColor="@color/c_999999"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/tx_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w60"
        android:layout_marginRight="@dimen/w40"
        android:lineSpacingExtra="7dp"
        android:text="从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨从喉头到锁骨"
        android:textColor="@color/c_222222"
        android:textSize="14dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w60"
        android:layout_marginRight="@dimen/h40"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/ll_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/im_one"
                android:layout_width="@dimen/w180"
                android:layout_height="@dimen/h180" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_two"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/im_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tx_more_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/h5"
                        android:layout_marginRight="@dimen/h5"
                        android:text="+6"
                        android:textColor="@color/white"
                        android:textSize="13dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/w40"
        android:layout_marginRight="@dimen/w40"
        android:layout_marginTop="@dimen/h30"
        android:background="@color/d_dbdbdb" />
</LinearLayout>