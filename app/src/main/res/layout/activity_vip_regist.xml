<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f6f6f6"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_ole_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:paddingLeft="@dimen/w20"
        android:paddingRight="@dimen/w20"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/w20"
            android:layout_marginTop="@dimen/w20"
            android:background="@color/b_b6b6b6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50"
                android:background="@color/c_f6f6f6"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vipRegist_sir_btn"
                    android:layout_width="@dimen/w110"
                    android:layout_height="@dimen/w40"
                    android:background="@drawable/line_xuanzhongk"
                    android:text="@string/regist_sir" />

                <Button
                    android:id="@+id/vipRegist_mr_btn"
                    android:layout_width="@dimen/w110"
                    android:layout_height="@dimen/w40"
                    android:layout_marginLeft="@dimen/w10"
                    android:background="@drawable/line_weixuanzhong"
                    android:text="@string/regist_mr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50"
                android:background="@color/c_f6f6f6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/w110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/regist_name"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/vipRegist_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50"
                android:layout_marginTop="@dimen/w1"
                android:background="@color/c_f6f6f6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/w110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/regist_cardNum"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/vipRegist_card_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/w1"
                android:background="@color/c_f6f6f6"
                android:paddingTop="@dimen/w5"
                android:text="完善身份证号能提升会员安全等级"
                android:textColor="@color/f_fd7070"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/vipRegist_area_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50"
                android:background="@color/c_f6f6f6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/w110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/regist_area"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/vipRegist_area_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableRight="@drawable/down_arrow_selector"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w80"
                android:layout_marginTop="@dimen/w1"
                android:background="@color/c_f6f6f6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w30"
                    android:gravity="center_vertical"
                    android:text="@string/regist_address"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/vipRegist_address_Et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="textMultiLine"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vipRegist_shop_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w50"
                android:layout_marginTop="@dimen/w1"
                android:background="@color/c_f6f6f6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/w110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/regist_shopAlways"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/vipRegist_shop_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableRight="@drawable/down_arrow_selector"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/w1"
                android:background="@color/c_f6f6f6"
                android:paddingBottom="@dimen/w30"
                android:paddingTop="@dimen/w10"
                android:text="带*为必填项"
                android:textColor="@color/f_fd7070"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/vipRegist_agree_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_f6f6f6"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/w10">

                <TextView
                    android:id="@+id/vipRegist_agree_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w1"
                    android:drawableLeft="@drawable/btn_xz_pressed_small"
                    android:gravity="right"
                    android:paddingTop="@dimen/w10"
                    android:text="我已阅读并同意"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w1"
                    android:paddingTop="@dimen/w10"
                    android:text="华润卡条款细则"
                    android:textColor="@color/f_fd7070"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_f6f6f6">

                <Button
                    android:id="@+id/vipRegist_regist_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w40"
                    android:layout_marginBottom="@dimen/w40"
                    android:background="@drawable/confirm_btn_selector"
                    android:enabled="false"
                    android:text="@string/register"
                    android:textColor="@color/txt_ff"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>