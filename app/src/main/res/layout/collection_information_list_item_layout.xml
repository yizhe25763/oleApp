<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_f6f6f6"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/collection_information_item_img"
        android:layout_width="@dimen/w130"
        android:layout_height="@dimen/h130"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w10"
        android:layout_toLeftOf="@+id/collection_information_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collection_information_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/collection_information_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h5"
            android:textSize="@dimen/sp13"
            android:textColor="@color/c_666666" />
    </LinearLayout>
</RelativeLayout>