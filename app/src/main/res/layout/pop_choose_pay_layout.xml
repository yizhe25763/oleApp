<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_pay_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_33000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/choose_pay_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w50"
            android:layout_marginLeft="@dimen/w20"
            android:gravity="center_vertical"
            android:text="@string/choose_pay_type"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/sp20" />

        <ImageButton
            android:id="@+id/choose_pay_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w10"
            android:background="@color/transparent"
            android:padding="@dimen/w10"
            android:src="@drawable/choose_pay_cancle_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/choose_pay_method_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/d_dbdbdb" />

    <RelativeLayout
        android:id="@+id/choose_pay_amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f6f6f6"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/h10"
        android:paddingTop="@dimen/h10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w50"
            android:layout_marginLeft="@dimen/w20"
            android:gravity="center_vertical"
            android:text="@string/choose_pay_amount"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp20" />

        <TextView
            android:id="@+id/choose_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w10"
            android:gravity="center_vertical"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp20" />
    </RelativeLayout>

    <Button
        android:id="@+id/choose_pay_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w50"
        android:background="@color/c_9b865b"
        android:gravity="center"
        android:text="@string/choose_pay_go"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/sp18" />
</LinearLayout>
