<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f6f6f6"
        android:orientation="vertical"
        tools:context=".personalcenter.activity.PointActivity">

        <include layout="@layout/toolbar_layout" />

        <!-- The PullToRefreshGridView replaces a standard RecyclerView widget. -->
        <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
            android:id="@+id/point_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:ptrMode="both" />
    </LinearLayout>
</layout>