<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/h20"
        android:layout_marginTop="@dimen/h20"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/h100"
            android:layout_height="@dimen/h108"
            android:layout_marginLeft="@dimen/h30"
            android:background="@drawable/f6_bg_corner_shape">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="53dp"
                android:layout_marginTop="@dimen/h22"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/h5"
                android:maxLines="2"
                android:textColor="@color/c_222222"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">


                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/txt_22"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h30"
                    android:textColor="@color/txt_22"
                    android:textSize="@dimen/h14" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/h15"
        android:background="@color/b_b6b6b6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:layout_marginLeft="@dimen/h20"
        android:layout_marginRight="@dimen/h20"
        android:layout_marginTop="@dimen/h15"
        android:background="@drawable/f6_bg_width_corner_shape">

        <EditText
            android:id="@+id/et_evlua_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top|left"
            android:hint="@string/evlua_product"
            android:paddingBottom="@dimen/h10"
            android:paddingLeft="@dimen/h10"
            android:paddingRight="@dimen/h10"
            android:paddingTop="@dimen/h15"
            android:textColor="@color/txt_66"
            android:textColorHint="@color/txt_66"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tx_evlua_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:paddingBottom="@dimen/h10"
            android:paddingLeft="@dimen/h10"
            android:paddingRight="@dimen/h10"
            android:paddingTop="@dimen/h15"
            android:textColor="@color/txt_66"
            android:textColorHint="@color/txt_66"
            android:textSize="14dp"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/h20"
        android:layout_marginRight="@dimen/h20"
        android:layout_marginTop="@dimen/h15"
        android:nestedScrollingEnabled="false" />

</LinearLayout>