<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h95"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
       android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/positon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:src="@drawable/positon_normal"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/w17"
            android:layout_marginRight="@dimen/w18"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/name_tv"
                android:layout_marginTop="@dimen/w18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222222"
                android:text="杨红军"/>

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_alignTop="@id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="17791805416"
                android:layout_marginRight="@dimen/w22"
                android:textColor="#222222"/>

            <TextView
                android:id="@+id/address_tv"
                android:layout_below="@id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h12"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="陕西省西安市南山区"/>
            <ImageButton
                android:id="@+id/main_edit_bt"
                android:layout_width="@dimen/w20"
                android:layout_height="@dimen/h20"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/address_tv"
                android:background="@drawable/goods_edit_button_selector"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/h10"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4"/>
</LinearLayout>