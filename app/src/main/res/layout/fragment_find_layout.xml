<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/information_search_layout"
            android:layout_width="wrap_content"
            android:padding="@dimen/w10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/information_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/information_search_selector" />

        </RelativeLayout>

        <!--中间 - 标题 -->
        <TextView
            android:id="@+id/title_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>

    <com.crv.ole.home.view.CommonTabChildLayout
        android:id="@+id/fragment_find_tab_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:tl_bar_color="#ffffff"
        app:tl_iconVisible="true"
        app:tl_iconGravity="BOTTOM"
        app:tl_indicator_corner_radius="8dp"
        app:tl_indicator_width="35dp"
        app:tl_textSelectColor="@color/c_222222"
        app:tl_textUnselectColor="@color/c_666666"
        app:tl_textsize="@dimen/sp15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dbdbdb" />

    <FrameLayout
        android:id="@+id/fragment_find_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
