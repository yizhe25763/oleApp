<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/h18"
        android:layout_marginLeft="@dimen/w20"
        android:layout_marginRight="@dimen/w20"
        android:layout_marginTop="@dimen/h18"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/msg_list_item_iv"
            android:layout_width="@dimen/w25"
            android:layout_height="@dimen/h25"
            android:src="@drawable/msg_list_wlzs_ic" />

        <TextView
            android:id="@+id/msg_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h10"
            android:text="sjkdfo"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/h20"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/c_979797" />

    <TextView
        android:id="@+id/msg_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/w20"
        android:layout_marginRight="@dimen/w20"
        android:text="sjkdfo"
        android:textColor="@color/txt_66"
        android:textSize="@dimen/sp14" />
</LinearLayout>