<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_ff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/camera_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w50"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/camer_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/d_dbdbdb" />

    <LinearLayout
        android:id="@+id/photo_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w50"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/photo_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h5"
        android:background="@color/c_f6f6f6" />

    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w50"
        android:gravity="center"
        android:text="取消"
        android:textColor="#222222"
        android:textSize="@dimen/sp16" />
</LinearLayout>