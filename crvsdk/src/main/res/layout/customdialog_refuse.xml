<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="45dip"
            android:text="拒绝报价"
            android:textColor="@color/c_ff5d48"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            style="@style/dialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="将取消当前订单，如需选择其他物流公司，请重新下单。"
            android:textColor="@color/c_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_message"
            style="@style/dialogTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:text="当前报价：200 元"
            android:textColor="@color/c_333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="备注:"
            android:textColor="@color/c_333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit"
            android:textSize="15sp"
            android:gravity="left|top"
            android:hint="请输入拒绝原因"
            android:minHeight="100dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_e2e2e2"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_ok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:padding="12dp"
                android:text="@string/ok"
                android:textColor="@drawable/text_black_blue_selector"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/c_e2e2e2"
                android:contentDescription="@null" />

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:padding="12dp"
                android:text="@string/cancel"
                android:textColor="@drawable/text_black_blue_selector"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>