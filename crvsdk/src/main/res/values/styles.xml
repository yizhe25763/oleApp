<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 进度 -->
    <style name="MyProgressBarNormal" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">@dimen/normal_progress_size</item>
        <item name="android:maxHeight">@dimen/normal_progress_size</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indicator_normal</item>
        <item name="android:indeterminateDuration">1800</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">@dimen/normal_progress_size</item>
        <item name="android:minHeight">@dimen/normal_progress_size</item>
    </style>
    <!-- 对话框文本 -->
    <style name="dialogTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- listview样式 -->
    <style name="customListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarSize">10.0dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:scrollingCache">false</item>
    </style>
    <!-- ScrollView样式 -->
    <style name="styleScrollView" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollbarSize">10.0dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>